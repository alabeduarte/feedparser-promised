{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "assert": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "no-cond-assign": 0,
    "no-console": 0,
    "no-undef": 0,
    "arrow-spacing": 2,
    "camelcase": 2,
    "comma-spacing": 2,
    "constructor-super": 2,
    "eol-last": 2,
    "func-names": 2,
    "generator-star-spacing": 2,
    "new-cap": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-else-return": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-parens": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-redeclare": 2,
    "no-this-before-super": 2,
    "no-throw-literal": 2,
    "no-trailing-spaces": 2,
    "no-unused-expressions": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-var": 2,
    "object-shorthand": [2, "methods"],
    "prefer-const": 2,
    "prefer-reflect": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "quotes": [2, "single", "avoid-escape"],
    "require-yield": 2
  }
}
